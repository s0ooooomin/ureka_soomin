package com.mycom.myapp.calc.all;

import org.springframework.context.annotation.AnnotationConfigApplicationContext;
import org.springframework.context.support.ClassPathXmlApplicationContext;

public class Test {

	public static void main(String[] args) {

		ClassPathXmlApplicationContext context = new ClassPathXmlApplicationContext("xml/all-hasa-calc-annotation.xml");
		
		HasaCalculator hasaCalculator = (HasaCalculator) context.getBean("hasaCalculator");	
		System.out.println(hasaCalculator.add(3, 7));
		// ERROR! bean은 1개만 매칭되어야하는데, calculator를 구현한 클래스가 2개
		// No qualifying bean of type 'com.mycom.myapp.calc.all.Calculator' available: 
		// expected single matching bean but found 2: calculatorImpl,calculatorImpl2
		
		context.close();
		
		// 
	}

}
